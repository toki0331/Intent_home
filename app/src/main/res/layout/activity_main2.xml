<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.toki.intent_home.Main2Activity">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="Confirmation"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:layout_margin="20dp"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv1"
        android:layout_alignTop="@+id/tv1"
        android:layout_marginTop="30dp"
        android:hint="Name"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/et1"
        android:layout_width="390dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/tv3"
        android:layout_below="@+id/tv2"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:textSize="15dp"
        android:background="@drawable/back"/>

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv1"
        android:layout_below="@+id/et1"
        android:hint=" Id"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/et2"
        android:layout_width="390dp"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/et1"
        android:layout_alignStart="@+id/tv3"
        android:layout_below="@+id/tv3"
        android:gravity="center"
        android:textSize="15dp"
        android:background="@drawable/back"/>

    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv1"
        android:layout_below="@+id/et2"
        android:hint="Birth"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/et3"
        android:layout_width="390dp"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/et1"
        android:layout_alignStart="@+id/tv3"
        android:layout_below="@+id/tv4"
        android:gravity="center"
        android:background="@drawable/back"
        android:inputType="date"
        android:textSize="15dp" />
    <TextView
        android:id="@+id/tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv1"
        android:layout_below="@+id/et3"
        android:hint="Hometown"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/et4"
        android:layout_width="390dp"
        android:background="@drawable/back"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/et1"
        android:layout_alignStart="@+id/tv3"
        android:layout_below="@+id/tv5"
        android:gravity="center"
        android:textSize="15dp" />
    <TextView
        android:id="@+id/tv6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv1"
        android:layout_below="@+id/et4"
        android:hint="gender"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/et7"
        android:layout_width="390dp"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/et4"
        android:layout_alignStart="@+id/tv6"
        android:layout_below="@+id/tv6"
        android:background="@drawable/back"
        android:gravity="center"
        android:textSize="15dp" />


    <TextView
        android:id="@+id/tv7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv1"
        android:layout_below="@+id/et7"

        android:hint="age"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/et5"
        android:layout_width="390dp"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/et1"
        android:layout_alignStart="@+id/tv3"
        android:layout_below="@+id/tv7"
        android:gravity="center"
        android:background="@drawable/back"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tv8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv1"
        android:layout_below="@+id/et5"
        android:hint="Phone"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/et6"
        android:layout_width="390dp"
        android:layout_height="30dp"
        android:background="@drawable/back"
        android:layout_alignEnd="@+id/et1"
        android:layout_alignStart="@+id/tv3"
        android:layout_below="@+id/tv8"
        android:gravity="center"
        android:textSize="15dp" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/et6"
        android:layout_below="@+id/et6"
        android:layout_marginTop="23dp"
        android:background="@android:color/holo_green_light"
        android:text="Need change?"
        android:textColor="@android:color/white"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/et6"
        android:layout_alignTop="@+id/btn1"
        android:background="@color/pink"
        android:text="decision"
        android:textColor="@android:color/white"
        android:textSize="20dp" />
</RelativeLayout>
